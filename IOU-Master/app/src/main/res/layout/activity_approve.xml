<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApproveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-67dp">

        <TextView
            android:id="@+id/approveSenderLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender" />

        <!--            android:text="myFriendID" />-->

        <EditText

            android:id="@+id/approveSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="love"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="19dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="49dp" />

        <TextView
            android:id="@+id/approveIOULabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I.O.U."
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="123dp" />

        <EditText
            android:id="@+id/approveIOU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="155dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="334dp" />

        <Button
            android:id="@+id/approveApproveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Approve Promise"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="-26dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <Button
            android:id="@+id/approveRejectButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Reject Promise" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>